<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        body {
            background-color: #0a0024;
            color: #fff;
            font-family: 'DM Mono', monospace;
            text-align: center;
            padding: 20px;
            margin: 0;
        }

        *::selection {
            color: aqua;
        }

        #inputbox, #password {
            padding: 10px;
            margin: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            color: #8B758B;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
        <input type="text" placeholder="Username" id="inputbox" autocomplete="off" required>
        <input type="password" placeholder="Password" id="password">
        <a href="/"><button class="btn btn-outline-secondary" id="subbutton" >Submit</button></a>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <script>
        document.querySelector('#subbutton').addEventListener('click', () => {
            console.log(document.querySelector('#inputbox').value);
            fetch('/lreq', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    'username': document.querySelector('#inputbox').value,
                    'password': document.querySelector('#password').value,
                }),
            })
            .then(response => response.json())
            .then(data => {
                console.log(data);
                // Display a message to the user based on the response
                // For example: document.getElementById('message').innerText = data;
            })
            .catch(error => {
                console.log(error);
                // Display an error message to the user
            });
            //window.location.href = '/'
        });
    </script>
</body>
</html>
